{
  "name": "nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack -p 7000",
    "build": "next build",
    "start": "npm run build && next start -p 7001",
    "copy-static-standalone": "cp-cli public .next/standalone/public && cp-cli .next/static .next/standalone/.next/static",
