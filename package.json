    "lint": "next lint"
  },
  "dependencies": {
    "javascript-time-ago": "^2.5.11",
    "next": "15.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "server-only": "^0.0.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.5.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cp-cli": "^2.0.0",
    "typescript": "^5"
  }
}
